<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Register">

    <TextView
        android:id="@+id/logoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <RelativeLayout
        android:id="@+id/Totalrel"
        android:layout_below="@+id/logoname"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/firstnametext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/ic_action_username"
        android:drawableStart="@drawable/ic_action_username"
        android:hint="First Name"
        />

    <EditText
        android:id="@+id/lastnametext"
        android:layout_width="200dp"
        android:layout_below="@+id/firstnametext"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/firstnametext"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/ic_action_username"
        android:drawableStart="@drawable/ic_action_username"
        android:hint="Last Name"
        android:layout_alignRight="@+id/firstnametext" />

    <EditText
        android:id="@+id/usernametext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/firstnametext"
        android:layout_below="@id/lastnametext"
        android:layout_marginTop="20dp"

        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/ic_action_username"
        android:drawableStart="@drawable/ic_action_username"
        android:hint="Username"
        android:layout_alignRight="@+id/firstnametext" />


    <RelativeLayout
        android:id="@+id/genderRel"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/usernametext"
        android:layout_alignEnd="@+id/firstnametext"
        android:layout_alignRight="@+id/firstnametext"
        android:layout_alignStart="@+id/usernametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernametext">

    <TextView
        android:id="@+id/gendertext"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/ic_action_gender"
        android:drawableStart="@drawable/ic_action_gender"
        android:hint="Gender:"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/gendertext"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextbg"
        android:prompt="@string/spinner_title" />
    </RelativeLayout>


    <EditText
        android:id="@+id/emailtext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/firstnametext"
        android:layout_marginTop="20dp"
        android:layout_below="@id/genderRel"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/ic_action_email"
        android:drawableStart="@drawable/ic_action_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_alignRight="@+id/firstnametext" />

    <EditText
        android:id="@+id/passwordtext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/firstnametext"
        android:layout_below="@id/emailtext"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/ic_action_password"
        android:drawableStart="@drawable/ic_action_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_alignRight="@+id/firstnametext" />

    </RelativeLayout>

    <Button

        android:id="@+id/buttonregister"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/Totalrel"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:background="@color/colorPrimary"
        android:text="Register"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="101dp" />


</RelativeLayout>